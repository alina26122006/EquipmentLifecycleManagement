<Window x:Class="EquipmentLifecycleManager.MaintenanceAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление техобслуживания" 
        Height="592" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Добавление техобслуживания" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Поля ввода -->
        <StackPanel Grid.Row="1">
            <!-- Выбор оборудования -->
            <TextBlock Text="Оборудование *"/>
            <ComboBox x:Name="cmbEquipment" 
                     DisplayMemberPath="Name"
                     SelectedValuePath="Id"
                     SelectionChanged="CmbEquipment_SelectionChanged"/>

            <!-- Инвентарный номер (только для чтения) -->
            <TextBlock Text="Инвентарный номер"/>
            <TextBox x:Name="txtInventoryNumber" IsReadOnly="True" Foreground="Gray"/>

            <!-- Текущий статус (только для чтения) -->
            <TextBlock Text="Текущий статус"/>
            <TextBox x:Name="txtCurrentStatus" IsReadOnly="True" Foreground="Gray"/>

            <!-- Планируемая дата -->
            <TextBlock Text="Планируемая дата ТО *"/>
            <DatePicker x:Name="dpPlannedDate" 
                       SelectedDate="{Binding PlannedDate}"
                       Margin="0,5,0,10" Padding="5"/>

            <!-- Статус ТО -->
            <TextBlock Text="Статус техобслуживания *"/>
            <ComboBox x:Name="cmbMaintenanceStatus" SelectedIndex="0">
                <ComboBoxItem Content="Запланировано"/>
                <ComboBoxItem Content="В работе"/>
            </ComboBox>

            <TextBlock Text="* - обязательные поля" FontStyle="Italic" 
                      Foreground="Gray" FontSize="11" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Отмена" Click="BtnCancel_Click"
                   Background="#F44336" Foreground="White"/>
            <Button x:Name="btnSave" Content="Сохранить" Click="BtnSave_Click"
                   Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>