<Window x:Class="EquipmentLifecycleManager.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление отделениями" Height="535" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление отделениями" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Список отделений -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Список отделений" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="lbDepartments" Height="250" 
                        SelectionChanged="LbDepartments_SelectionChanged"
                        DisplayMemberPath="Name"/>
                <Button x:Name="btnAddDepartment" Content="➕ Добавить" 
                       Click="BtnAddDepartment_Click" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Редактирование отделения -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Редактирование отделения" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Название *"/>
                <TextBox x:Name="txtDepartmentName" MaxLength="100"/>

                <TextBlock Text="Код *"/>
                <TextBox x:Name="txtDepartmentCode" MaxLength="10"/>

                <TextBlock Text="Описание"/>
                <TextBox x:Name="txtDepartmentDescription" MaxLength="200" Height="60"
                        TextWrapping="Wrap" AcceptsReturn="True"/>

                <CheckBox x:Name="chkIsActive" Content="Активно" Margin="0,10,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnSaveDepartment" Content="💾 Сохранить" 
                           Click="BtnSaveDepartment_Click"
                           Background="#4CAF50" Foreground="White"/>
                    <Button x:Name="btnDeleteDepartment" Content="🗑️ Удалить" 
                           Click="BtnDeleteDepartment_Click"
                           Background="#F44336" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Кнопка закрытия -->
        <Button Grid.Row="2" Content="Закрыть" Click="BtnClose_Click"
               HorizontalAlignment="Center" Margin="0,20,0,0"
               Padding="20,8"/>
    </Grid>
</Window>