<Window x:Class="EquipmentLifecycleManager.EquipmentEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление оборудования" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- Поля ввода -->
        <StackPanel Grid.Row="1">
            <!-- Наименование -->
            <TextBlock Text="Наименование оборудования *"/>
            <TextBox x:Name="txtName" Text="{Binding EquipmentName, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="200"/>
            
            <!-- Инвентарный номер -->
            <TextBlock Text="Инвентарный номер *"/>
            <TextBox x:Name="txtInventoryNumber" Text="{Binding InventoryNumber, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="50"/>
            
            <!-- Модель -->
            <TextBlock Text="Модель"/>
            <TextBox x:Name="txtModel" Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}"
                    MaxLength="100"/>
            
            <!-- Статус -->
            <TextBlock Text="Статус *"/>
            <ComboBox x:Name="cmbStatus" SelectedItem="{Binding Status}"
                     Margin="0,5,0,10">
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="На обслуживании"/>
                <ComboBoxItem Content="Списан"/>
                <ComboBoxItem Content="Резерв"/>
            </ComboBox>
            
            <!-- Дата ввода в эксплуатацию -->
            <TextBlock Text="Дата ввода в эксплуатацию *"/>
            <DatePicker x:Name="dpCommissionDate" SelectedDate="{Binding CommissionDate}"
                       Margin="0,5,0,10" Padding="5"/>
            
            <TextBlock Text="* - обязательные поля" FontStyle="Italic" 
                      Foreground="Gray" FontSize="11" Margin="0,10,0,0"/>
        </StackPanel>
        
        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Отмена" Click="BtnCancel_Click"
                   Background="#F44336" Foreground="White"/>
            <Button x:Name="btnSave" Content="Сохранить" Click="BtnSave_Click"
                   Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>