<Window x:Class="EquipmentLifecycleManager.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация - Система управления оборудованием" 
        Height="577" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Grid Background="#2E86AB">
        <Border Background="White" CornerRadius="10" 
                Margin="20" VerticalAlignment="Center">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="🔐 АВТОРИЗАЦИЯ" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#2E86AB" Margin="0,0,0,5"/>
                    <TextBlock Text="Система управления жизненным циклом оборудования"
                               TextAlignment="Center" Foreground="#666"/>
                </StackPanel>

                <!-- Поля ввода -->
                <StackPanel Grid.Row="1">
                    <!-- Логин -->
                    <TextBlock Text="Логин" Margin="0,10,0,5" 
                               FontWeight="SemiBold" Foreground="#333"/>
                    <TextBox x:Name="txtUsername" 
                             FontSize="14" Padding="10" 
                             BorderBrush="#CCCCCC" BorderThickness="1"
                             GotFocus="TxtUsername_GotFocus"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль" Margin="0,15,0,5" 
                               FontWeight="SemiBold" Foreground="#333"/>
                    <PasswordBox x:Name="txtPassword" 
                                 FontSize="14" Padding="10" 
                                 BorderBrush="#CCCCCC" BorderThickness="1"
                                 GotFocus="TxtPassword_GotFocus"/>

                    <!-- Роль (для демо) -->
                    <TextBlock Text="Роль" Margin="0,15,0,5" 
                               FontWeight="SemiBold" Foreground="#333"/>
                    <ComboBox x:Name="cmbRole" 
                              FontSize="14" Padding="8"
                              BorderBrush="#CCCCCC" BorderThickness="1">
                        <ComboBoxItem Content="Администратор"/>
                        <ComboBoxItem Content="Инженер"/>
                        <ComboBoxItem Content="Техник"/>
                        <ComboBoxItem Content="Менеджер"/>
                    </ComboBox>

                    <!-- Чекбокс запомнить -->
                    <CheckBox x:Name="chkRemember" Content="Запомнить меня" 
                              Margin="0,15,0,0" VerticalAlignment="Center"/>

                    <!-- Сообщение об ошибке -->
                    <TextBlock x:Name="txtErrorMessage" 
                               Foreground="#F44336" FontSize="12"
                               Margin="0,15,0,0" TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                            HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnLogin" Content="Войти" 
                            Click="BtnLogin_Click"
                            Background="#4CAF50" Foreground="White"
                            Padding="25,10" FontSize="14" FontWeight="SemiBold"/>

                    <Button x:Name="btnExit" Content="Выход" 
                            Click="BtnExit_Click"
                            Background="#F44336" Foreground="White"
                            Padding="25,10" FontSize="14" FontWeight="SemiBold"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>